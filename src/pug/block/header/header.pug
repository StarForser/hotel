            li.menu__item
              a.menu__link=value
      h1.header__title ВИЛЛА РЕНЕССАНС
        span.header__title-subtitle ОТДЫХ В АЛУШТЕ
      section.discount
        h2.discount__title Скидка при раннем бронировании
      h3.header__subtitle Лучшая цена гарантирована
        span.header__subtitle просто какой то текст
      .header__features
        .header__features-preview
          img(src="", alt="")
        span.header__features-title название блока
        .header__features-info
          a(href="").header__features-link
            span.


